generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  username  String  @id
  name      String?
  password  String
  bio       String?
  posts     Post[]

  @@map("users")

}

model Post {
  id           String   @id @default(uuid())
  author       User     @relation(fields: [userUsername], references: [username])
  createdAt    DateTime @default(now())
  content      String
  userUsername String

  @@map("posts")
}
