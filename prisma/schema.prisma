generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String         @id @default(uuid())
  username  String         @unique
  name      String?
  password  String
  bio       String?
  posts     Post[]

  @@map("users")
}

model Post {
  id        String   @id @default(uuid())
  author    User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  content   String
  userId    String

  @@map("posts")
}
